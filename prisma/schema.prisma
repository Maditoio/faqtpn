// Property Rental Application - Prisma Schema
// Database: PostgreSQL with UUID support

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum UserRole {
  USER          // Regular renter
  HOME_OWNER    // Property owner
  SUPER_ADMIN   // Administrator
}

enum PropertyStatus {
  DRAFT         // Incomplete listing being created
  PENDING       // Awaiting admin approval
  APPROVED      // Active listing
  SUSPENDED     // Admin suspended
  RENTED        // Property has been rented
  DELETED       // Soft deleted
}

enum PropertyType {
  APARTMENT            // Apartment/Flat
  HOUSE                // Standalone house
  TOWNHOUSE            // Townhouse
  COTTAGE              // Cottage
  BACKROOM             // Backroom/Granny flat
  WAREHOUSE            // Warehouse
  INDUSTRIAL_PROPERTY  // Industrial property
  COMMERCIAL_PROPERTY  // Commercial property/office space
}

enum AuditAction {
  USER_CREATED
  USER_UPDATED
  USER_DELETED
  USER_SUSPENDED
  PROPERTY_APPROVED
  PROPERTY_SUSPENDED
  PROPERTY_DELETED
  LOGIN_SUCCESS
  LOGIN_FAILED
  EMAIL_VERIFIED            // Email verification completed
  PASSWORD_RESET_REQUESTED  // Password reset requested
  PASSWORD_RESET            // Password reset completed
  AGENT_COMMISSION_EARNED   // Agent earned commission
  WALLET_PAYMENT_MADE       // Payment made using wallet
  WALLET_CREDITED           // Wallet credited
  WALLET_DEBITED            // Wallet debited
}

enum NotificationType {
  PROPERTY_UNAVAILABLE      // Property was rented
  PROPERTY_APPROVED          // Property was approved by admin
  PROPERTY_REJECTED          // Property was rejected/suspended
  PRICE_DROP                 // Price dropped on favorited property
  NEW_PROPERTY_LOCATION      // New property in favorite location
  PROPERTY_AVAILABLE         // Property is available again
  ALERT_MATCH                // New property matches saved alert
  INFO                       // General info
}

// User Model - All application users
model User {
  id            String      @id @default(uuid())
  email         String      @unique
  name          String
  passwordHash  String      @map("password_hash")
  phone         String?
  whatsapp      String?
  role          UserRole    @default(USER)
  isActive      Boolean     @default(true) @map("is_active")
  emailVerified Boolean     @default(false) @map("email_verified")
  alertsConsent Boolean     @default(false) @map("alerts_consent") // User consent for property alerts notifications
  alertsConsentDate DateTime? @map("alerts_consent_date") // When user gave consent
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  // Relations
  properties    Property[]
  favorites     Favorite[]
  sessions      Session[]
  accounts      Account[]
  auditLogs     AuditLog[]
  notifications Notification[]
  propertyAlerts PropertyAlert[]
  agentProfile   AgentProfile?
  wallet         Wallet?
  referredProperties Property[] @relation("ReferredBy")

  @@index([email])
  @@index([role])
  @@map("users")
}

// Property Model - Rental listings
model Property {
  id            String         @id @default(uuid())
  title         String
  description   String?        @db.Text
  propertyType  PropertyType?  @default(APARTMENT) @map("property_type")
  price         Decimal?       @db.Decimal(10, 2)
  location      String?        // City or primary location (for backward compatibility and search)
  address       String?        // Street address
  city          String?        // City name
  state         String?        // State/Province
  country       String?        // Country
  postalCode    String?        @map("postal_code") // Postal/ZIP code
  bedrooms      Int?
  bathrooms     Int?
  squareFeet    Int?           @map("square_feet")
  parkingSpaces Int            @default(0) @map("parking_spaces")
  amenities     Json?          @db.JsonB
  availableFrom DateTime?      @map("available_from")
  
  // Rental requirements
  waterPrepaid        Boolean  @default(false) @map("water_prepaid")
  electricityPrepaid  Boolean  @default(false) @map("electricity_prepaid")
  depositMonths       Int      @default(1) @map("deposit_months")
  bankStatementsMonths Int     @default(3) @map("bank_statements_months")
  
  status        PropertyStatus @default(PENDING)
  ownerId       String         @map("owner_id")
  latitude      Decimal?       @db.Decimal(10, 8)
  longitude     Decimal?       @db.Decimal(11, 8)
  
  // Listing pricing and payment
  listingPlan   String?        @default("basic") @map("listing_plan") // basic, standard, premium
  maxImages     Int            @default(3) @map("max_images") // Based on selected plan
  listingPrice  Decimal?       @default(49.00) @db.Decimal(10, 2) @map("listing_price") // Amount paid
  paidAt        DateTime?      @map("paid_at") // When payment was made
  expiresAt     DateTime?      @map("expires_at") // When listing expires (3 months from payment)
  paymentStatus String?        @default("pending") @map("payment_status") // pending, paid, expired
  
  // Agent referral tracking
  referredBy    String?        @map("referred_by") // Agent user ID who referred this listing
  commissionPaid Boolean       @default(false) @map("commission_paid") // Whether commission was paid to agent
  commissionAmount Decimal?    @db.Decimal(10, 2) @map("commission_amount") // Commission amount earned
  
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  // Relations
  owner         User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  referrer      User?          @relation("ReferredBy", fields: [referredBy], references: [id], onDelete: SetNull)
  images        PropertyImage[]
  favorites     Favorite[]

  @@index([ownerId])
  @@index([status])
  @@index([propertyType])
  @@index([price])
  @@index([location])
  @@index([bedrooms, bathrooms])
  @@index([availableFrom])
  @@index([paymentStatus])
  @@index([expiresAt])
  @@map("properties")
}

// Property Images Model
model PropertyImage {
  id          String   @id @default(uuid())
  propertyId  String   @map("property_id")
  imageUrl    String   @map("image_url")
  isFeatured  Boolean  @default(false) @map("is_featured")
  order       Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@map("property_images")
}

// Favorites Model - Many-to-many relationship
model Favorite {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  propertyId String   @map("property_id")
  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([userId, propertyId])
  @@index([userId])
  @@index([propertyId])
  @@map("favorites")
}

// Notification Model - User notifications
model Notification {
  id          String           @id @default(uuid())
  userId      String           @map("user_id")
  title       String
  message     String           @db.Text
  type        NotificationType @default(INFO)
  isRead      Boolean          @default(false) @map("is_read")
  propertyId  String?          @map("property_id")
  createdAt   DateTime         @default(now()) @map("created_at")

  // Relations
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}

// Audit Log Model - Track admin actions and security events
model AuditLog {
  id          String      @id @default(uuid())
  action      AuditAction
  userId      String?     @map("user_id")
  performedBy String?     @map("performed_by")
  targetId    String?     @map("target_id")
  details     String?     @db.Text
  ipAddress   String?     @map("ip_address")
  userAgent   String?     @map("user_agent")
  createdAt   DateTime    @default(now()) @map("created_at")

  // Relations
  user        User?       @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

// NextAuth Models
model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Property Alert Model - Saved searches for notifications
model PropertyAlert {
  id                String       @id @default(uuid())
  userId            String       @map("user_id")
  name              String       // User-defined name for the alert
  
  // Search criteria
  location          String?      // City or area
  propertyType      PropertyType?
  minPrice          Decimal?     @db.Decimal(10, 2)
  maxPrice          Decimal?     @db.Decimal(10, 2)
  minBedrooms       Int?
  minBathrooms      Int?
  
  // Alert settings
  isActive          Boolean      @default(true) @map("is_active")
  notifyEmail       Boolean      @default(true) @map("notify_email")
  notifyInApp       Boolean      @default(true) @map("notify_in_app")
  
  // Metadata
  lastTriggered     DateTime?    @map("last_triggered")
  matchCount        Int          @default(0) @map("match_count")
  createdAt         DateTime     @default(now()) @map("created_at")
  updatedAt         DateTime     @updatedAt @map("updated_at")

  // Relations
  user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isActive])
  @@index([location])
  @@map("property_alerts")
}
// Agent Profile Model - Users who can earn commissions
model AgentProfile {
  id              String   @id @default(uuid())
  userId          String   @unique @map("user_id")
  referralCode    String   @unique @map("referral_code") // Unique code for referrals
  commissionRate  Decimal  @default(4.0) @db.Decimal(5, 2) @map("commission_rate") // Default 4%
  totalEarnings   Decimal  @default(0) @db.Decimal(10, 2) @map("total_earnings")
  totalReferrals  Int      @default(0) @map("total_referrals")
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relations
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([referralCode])
  @@index([userId])
  @@map("agent_profiles")
}

// Wallet Model - User wallet for commission earnings and payments
model Wallet {
  id              String   @id @default(uuid())
  userId          String   @unique @map("user_id")
  balance         Decimal  @default(0) @db.Decimal(10, 2)
  totalEarned     Decimal  @default(0) @db.Decimal(10, 2) @map("total_earned")
  totalSpent      Decimal  @default(0) @db.Decimal(10, 2) @map("total_spent")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relations
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions    WalletTransaction[]

  @@index([userId])
  @@map("wallets")
}

// Wallet Transaction Model - Track all wallet activities
model WalletTransaction {
  id              String   @id @default(uuid())
  walletId        String   @map("wallet_id")
  type            String   // CREDIT or DEBIT
  amount          Decimal  @db.Decimal(10, 2)
  description     String   @db.Text
  referenceType   String?  @map("reference_type") // COMMISSION, PAYMENT, REFUND, etc.
  referenceId     String?  @map("reference_id") // Property ID or related record
  balanceBefore   Decimal  @db.Decimal(10, 2) @map("balance_before")
  balanceAfter    Decimal  @db.Decimal(10, 2) @map("balance_after")
  createdAt       DateTime @default(now()) @map("created_at")

  // Relations
  wallet          Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)

  @@index([walletId])
  @@index([type])
  @@index([createdAt])
  @@map("wallet_transactions")
}

// System Settings Model - Admin configurable settings
model SystemSettings {
  id                    String   @id @default(uuid())
  key                   String   @unique
  value                 String   @db.Text
  description           String?  @db.Text
  updatedAt             DateTime @updatedAt @map("updated_at")

  @@map("system_settings")
}